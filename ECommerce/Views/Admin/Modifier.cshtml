@model ECommerce.Models.Commercial
<div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); ">
    <div class="register-box " style="width:max-content;">
        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg">Ajout d'un commercial</p>

                <form action="@Url.Action("Modifier","Admin")" method="post">
                    <table>
                        <tr>
                            <td>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" name="NomPrenom" value="@Model.NomPrenom" required>
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-user"></span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="input-group mb-3">
                                    <input type="number" class="form-control" name="Telephone" value="@Model.Telephone" required>
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-user"></span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="input-group mb-3">
                                    <input type="date" class="form-control" name="DateNaissance" placeholder="jj/mm/aaaa" value="@Model.DateNaissance" required>

                                </div>
                            </td>
                            <td>
                                <div class="input-group mb-3">
                                    <input type="number" class="form-control" name="Salaire" value="@Model.Salaire" required>
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="input-group mb-3">
                                    <input type="email" class="form-control" id="AdrMail" name="LogIn" value="@Model.LogIn" required>
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-envelope"></span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="input-group mb-3">
                                    <input type="password" class="form-control" name="Password" value="@Model.Password" required>
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <span class="fas fa-lock"></span>
                                        </div>
                                    </div>
                                </div>

                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="input-group mb-3">
                                    <button type="submit" id="btn" class="btn btn-primary btn-block">Enregistrer</button>
                                </div>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div><!-- /.card -->
    </div>
</div>